{
  "manifest_version": 3,
  "name": "Kaigosha Site Timer",
  "description": "Strict usage limits with cooldowns, warnings, break-glass, and diagnostics.",
  "version": "2.0.0",
  "permissions": ["storage", "tabs", "alarms", "notifications", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Kaigosha Timer",
    "default_popup": "src/popup/popup.html"
  },
  "options_page": "src/options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/tracker.js"],
      "run_at": "document_idle"
    }
  ]
}
